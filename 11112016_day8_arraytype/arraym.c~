#include<stdio.h>
int main()
{
	char a[100];
	int i, j, b=0;
	char c;
	printf("\n\nEnter the array size of array");
	scanf("%d", &b);
	printf("\n\nArray of size a[%d] is created", b);
	printf("\n\nEnter %d values to store it in the array", b);
	for(i=0;i<b;i++)
	{
		scanf(" %c", &c);
		a[i]=c;
	}
	for(j=0;j<b;j++)
	{
		printf("\n\na[%d]=%c\n",j, a[j]);
	}
	return 0;
}
